<div class="register_header_text">User Login </div>
<% form_for @user_session, :url => user_session_path do |f| %>

  <div class="input_main_block">
    <div class="input_block_left">Email</div>
    <div class="input_block"><%= f.text_field :login %></div>
    <div class="input_block1" style="display:block;"><span class="input_block_inner"></span></div>
  </div>
  <div class="input_main_block">
    <div class="input_block_left"><%= f.label :password %></div>
    <div class="input_block"><%= f.password_field :password %></div>
    <div class="input_block1" style="display:block;"><span class="input_block_inner"></span></div>
  </div>
  <div class="input_main_block">
    <div class="input_block_left"><%= f.label :remember_me %></div>
    <div class="input_block"><%= f.check_box :remember_me %></div>
    <div class="input_block1" style="display:block;"><span class="input_block_inner"></span></div>
  </div>
  <div class="input_main_block">
    <div class="input_block_left">&nbsp;</div>
    <div class="input_block"><%= f.submit "Login" %></div>
    <div class="input_block1" style="display:block;"><span class="input_block_inner"></span></div>
  </div>

  <div class="input_main_block">
    <div class="input_block_left">&nbsp;</div>
    <div class="input_block"><%= link_to "forgot password ?" , new_password_reset_path %></div>
    <div class="input_block1" style="display:block;"><span class="input_block_inner"></span></div>
  </div>

<% end %>




